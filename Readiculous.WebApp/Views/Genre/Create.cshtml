@model Readiculous.Services.ServiceModels.GenreViewModel

@{
    ViewData["Title"] = "Add Genre";
}

<style>
    .genre-modal-card {
        background: #fdf1f5;
        border-radius: 16px;
        border: 1px solid #e7c3d1;
        max-width: 540px;
        margin: 2rem auto;
        padding: 2.5rem 2rem 2rem 2rem;
        box-shadow: 0 2px 8px #e7c3d1;
    }
    .genre-modal-header {
        font-size: 2.2rem;
        font-weight: bold;
        color: #3d2230;
        margin-bottom: 1.2rem;
        font-family: 'Georgia', serif;
    }
    .genre-modal-label {
        font-size: 1.3rem;
        font-weight: 500;
        color: #3d2230;
        margin-bottom: 0.5rem;
    }
    .genre-modal-input, .genre-modal-textarea {
        background: #fff6fa;
        border-radius: 8px;
        border: 1px solid #e7c3d1;
        font-size: 1.1rem;
        color: #3d2230;
        margin-bottom: 1.2rem;
        width: 100%;
        padding: 0.7rem 1rem;
        outline: none;
        transition: border 0.2s;
    }
    .genre-modal-input:focus, .genre-modal-textarea:focus {
        border: 1.5px solid #f8bfcf;
        background: #fff0f7;
    }
    .genre-modal-actions {
        display: flex;
        justify-content: flex-end;
        gap: 1.2rem;
        margin-top: 1.5rem;
    }
    .genre-btn-cancel {
        background: #fff;
        color: #3d2230;
        border: 1.5px solid #bfa6b8;
        border-radius: 8px;
        font-weight: 600;
        padding: 0.5rem 1.3rem;
        font-size: 1.1rem;
        transition: background 0.2s, color 0.2s;
    }
    .genre-btn-cancel:hover {
        background: #f8bfcf;
        color: #fff;
    }
    .genre-btn-save {
        background: #f8bfcf;
        color: #3d2230;
        border: none;
        border-radius: 12px;
        font-weight: 600;
        padding: 0.5rem 1.7rem;
        font-size: 1.1rem;
        box-shadow: 0 2px 6px #e7c3d1;
        transition: background 0.2s, color 0.2s;
    }
    .genre-btn-save:hover {
        background: #f59bb8;
        color: #fff;
    }
</style>

<div class="genre-modal-card">
    <div class="genre-modal-header">Add Genre</div>
    <form asp-action="Create" autocomplete="off">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>
        <div class="mb-3">
            <label asp-for="Name" class="genre-modal-label"></label>
            <input asp-for="Name" class="genre-modal-input" placeholder="Enter genre name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Description" class="genre-modal-label"></label>
            <textarea asp-for="Description" class="genre-modal-textarea" rows="4" placeholder="Enter genre description"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="genre-modal-actions">
            <a asp-action="Index" class="genre-btn-cancel">Cancel</a>
            <button type="submit" class="genre-btn-save">Save</button>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
