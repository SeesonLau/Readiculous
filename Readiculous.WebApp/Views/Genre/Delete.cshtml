@model Readiculous.Data.Models.Genre
@{
    ViewData["Title"] = "Delete Genre";
}

<link rel="stylesheet" href="~/css/genre.css" />

<div class="genre-delete-container">
    <div class="genre-delete-modal">
        <!-- Cat Image -->
        <div class="genre-delete-image-container">
            <img src="~/img/cat-delete.png" alt="Cat" class="genre-delete-image" />
        </div>
        <div class="genre-delete-title">
            Are you sure you want to delete?
        </div>
        <div class="genre-delete-actions">
            <a asp-action="Index" class="genre-delete-cancel btn">Cancel</a>
            <form asp-action="Delete" method="post" class="genre-delete-form">
                <input type="hidden" asp-for="GenreId" />
                <button type="submit" class="genre-delete-submit btn">Delete</button>
            </form>
        </div>
    </div>
</div> 