@model Readiculous.Services.ServiceModels.GuestViewModel
@{
    Layout = null;
    var userId = Context.Session.GetString("UserId");
    var userRole = Context.Session.GetString("UserRole");

    // Redirect Admin users to Admin header
    if (!string.IsNullOrEmpty(userRole) && userRole == "Admin")
    {
        Context.Response.Redirect(Url.Action("Index", "Home"));
    }

    var modal = ViewBag.Modal as string;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <title>Readiculous - Guest View</title>

    <!-- CSS -->
    <link rel="stylesheet" href="@Url.Content("~/css/landing.css")" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />

    <!-- JS Libraries -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
    <!-- Navbar -->
    <header class="navbar">
        <div class="logo-group" onclick="location.href='@Url.Action("GuestView", "UserView")'">
            <img src="@Url.Content("~/img/png-logo.png")" alt="Readiculous Logo" class="logo-icon" />
            <h1 class="team-name">Readiculous</h1>
        </div>
        <nav id="navigation" class="nav-links">
            <a href="@Url.Action("GuestView", "UserView", new { section = "new-books" })">📖 New Books</a>
            <a href="@Url.Action("GuestView", "UserView", new { section = "top-books" })">🏆 Top Books</a>
            <a href="@Url.Action("GenreBooks", "UserView")">🏷️ Genre</a>

            @if (!string.IsNullOrEmpty(userId) && userRole == "Reviewer")
            {
                <div class="dropdown">
                    <a href="#" class="dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                        <img src="~/img/user-icon.png" alt="Profile" class="profile-icon" />
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><a class="dropdown-item" href="@Url.Action("EditProfile", "UserView")">Edit Profile</a></li>
                        <li><a class="dropdown-item" href="@Url.Action("SignOutUser", "LandingPage")">Logout</a></li>
                    </ul>
                </div>
            }
            else if (string.IsNullOrEmpty(userId))
            {
                <a href="javascript:void(0);" onclick="showModal('login')">Login</a>
            }
        </nav>
    </header>

    <!-- Main Content -->
    <main class="content-container">
        <input type="text" class="book-search" placeholder="🔍 Book Search..." />

        <!-- New Books -->
        <section id="new-books" class="section-box">
            <div class="section-header-box">
                <h2 class="section-title">New Books</h2>
                <a class="view-more-link" href="@Url.Action("ViewNewBooks", "UserView", new { page = 1 })">View More</a>
            </div>
            <div class="book-grid">
                @foreach (var book in Model.NewBooks)
                {
                    <div class="book-card" onclick="location.href='@Url.Action("UserBookDetails", "UserView", new { title = book.Title })'">
                        <img src="@Url.Content(book.CoverImageUrl ?? "~/img/placeholder.png")" alt="@book.Title" class="book-cover" />
                        <div class="book-details">
                            <p class="book-title">@book.Title</p>
                            <p class="book-author">@book.Author</p>
                            <p class="book-rating">⭐ @book.Rating</p>
                        </div>
                    </div>
                }
            </div>
        </section>

        <!-- Top Books -->
        <section id="top-books" class="section-box">
            <div class="section-header-box">
                <h2 class="section-title">Top Books</h2>
                <a class="view-more-link" href="@Url.Action("ViewTopBooks", "UserView", new { page = 1 })">View More</a>
            </div>
            <div class="book-grid">
                @foreach (var book in Model.TopBooks)
                {
                    <div class="book-card" onclick="location.href='@Url.Action("UserBookDetails", "UserView", new { title = book.Title })'">
                        <img src="@Url.Content(book.CoverImageUrl ?? "~/img/placeholder.png")" alt="@book.Title" class="book-cover" />
                        <div class="book-details">
                            <p class="book-title">@book.Title</p>
                            <p class="book-author">@book.Author</p>
                            <p class="book-rating">⭐ @book.Rating</p>
                        </div>
                    </div>
                }
            </div>
        </section>
    </main>

    <!-- Auth Modal Partial -->
    @await Html.PartialAsync("~/Views/Shared/_AuthModal.cshtml")

    <!-- Scripts -->
    <script src="~/js/guestview.js" asp-append-version="true"></script>
    <script src="~/js/userModal/LoginModal.js" asp-append-version="true"></script>
    <script src="~/js/userModal/RegisterModal.js" asp-append-version="true"></script>


    @if (!string.IsNullOrEmpty(modal))
    {
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                showModal("@modal");
            });
        </script>
    }
</body>
</html>
