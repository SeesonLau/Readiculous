<div class="modal fade" id="loginModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content p-4" style="background-color: var(--color-modal); border-radius: 8px;">

            <!-- Close button aligned right -->
            <button type="button" class="btn-close ms-auto" data-bs-dismiss="modal" aria-label="Close"></button>

            <form id="loginForm">
                <div class="text-center">
                    <img src="~/img/png-logo.png" class="auth-icon mb-2" alt="Logo" style="width:60px;" />
                    <h2 class="h5 mb-3">Log In to Readiculous</h2>
                </div>

                <div id="loginError" class="text-danger small mb-2" style="display:none;"></div>

                <div class="mb-2">
                    <input name="Email" class="form-control" placeholder="Email" />
                </div>

                <div class="mb-2">
                    <input name="Password" type="password" class="form-control" placeholder="Password" />
                </div>

                <button type="submit" class="btn btn-primary w-100 mb-2">Sign In</button>

                <div class="text-center small">
                    <a href="javascript:void(0);" onclick="showModal('forgot')">Forgot Password?</a><br />
                    Don’t have an account?
                    <a href="javascript:void(0);" onclick="switchModal('#loginModal', '#registerModal')">Sign up</a>
                </div>
            </form>
        </div>
    </div>
</div>
