@model Readiculous.WebApp.Models.OTPViewModel

<form asp-action="VerifyOTP" asp-controller="LandingPage" method="post" novalidate>
    <button type="button" class="modal-close" onclick="closeModal()">×</button>
    <img src="~/img/email.png" class="auth-icon" />
    <h2>Enter Verification Code</h2>
    <p class="small mb-3">We’ve sent a code to your email. Enter it below.</p>
    <input asp-for="Email" type="hidden" />
    <input asp-for="OTP" class="form-input" placeholder="Enter OTP Code" />
    <span asp-validation-for="OTP" class="text-danger small"></span>

    <button type="button" class="auth-btn" onclick="showModal('newpass')">Continue</button>
    <a href="javascript:void(0);" onclick="showModal('forgot')" class="auth-btn back-btn">Back</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
