@model Readiculous.WebApp.Models.LoginViewModel

<form id="loginForm">
    @Html.AntiForgeryToken()

    <button type="button" class="modal-close" onclick="closeModal()">×</button>

    <img src="~/img/png-logo.png" class="auth-icon" alt="Logo" />
    <h2>Log In to Readiculous</h2>
    <div id="loginError" class="text-danger small mb-2" style="display:none;"></div>

    <input asp-for="Email" class="form-input" placeholder="Email" />
    <span asp-validation-for="Email" class="text-danger small"></span>

    <input asp-for="Password" class="form-input" placeholder="Password" type="password" />
    <span asp-validation-for="Password" class="text-danger small"></span>

    <button type="submit" class="auth-btn">Sign In</button>

    <div class="mt-3 small">
        <a href="javascript:void(0);" onclick="showModal('forgot')">Forgot Password?</a><br />
        Don’t have an account?
        <a href="javascript:void(0);" onclick="showModal('register')">Sign up</a>
    </div>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")

    <script src="~/js/userModal/LoginModal.js" asp-append-version="true"></script>
}
