@model Readiculous.WebApp.Models.RegisterViewModel

<form id="registerForm" novalidate>
    @Html.AntiForgeryToken()

    <button type="button" class="modal-close" onclick="closeModal()">×</button>
    <img src="~/img/png-logo.png" class="auth-icon" />
    <h2>Register to Readiculous</h2>

    <div id="registerError" class="text-danger small mb-2" style="display:none;"></div>

    <input asp-for="Email" class="form-input" placeholder="Email" id="Email" />
    <span asp-validation-for="Email" class="text-danger small"></span>

    <input asp-for="Password" type="password" class="form-input" placeholder="Password" id="Password" />
    <span asp-validation-for="Password" class="text-danger small"></span>

    <input asp-for="ConfirmPassword" type="password" class="form-input" placeholder="Confirm Password" id="ConfirmPassword" />
    <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>

    <button type="submit" class="auth-btn">Sign Up</button>

    <div class="mt-3 small">
        Already have an account?
        <a href="javascript:void(0);" onclick="showModal('login')">Log in</a>
    </div>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script src="~/js/userModal/RegisterModal.js" asp-append-version="true"></script>
}
