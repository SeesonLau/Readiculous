@model Readiculous.Services.ServiceModels.UserViewModel
<h2 style="font-weight: bold; color: #2c2133; margin-bottom: 1.2rem;">Complete Your Profile</h2>
<form id="firstTimeProfileForm" enctype="multipart/form-data">
    <div class="mb-3 text-start">
        <label class="form-label">Username</label>
        <input type="text" name="Username" class="form-control" value="@Model.Username" required />
    </div>
    <div class="mb-3 text-start">
        <label class="form-label">Password</label>
        <input type="password" name="Password" class="form-control" required />
    </div>
    <div class="mb-3 text-start">
        <label class="form-label">Confirm Password</label>
        <input type="password" name="ConfirmPassword" class="form-control" required />
    </div>
    <div class="mb-3 text-start">
        <label class="form-label">Profile Picture (optional)</label>
        <input type="file" name="ProfilePicture" class="form-control" accept="image/*" />
    </div>
    <button type="submit" class="btn btn-primary btn-block login-btn gradient-custom-2 mb-3 w-100">Save</button>
</form> 