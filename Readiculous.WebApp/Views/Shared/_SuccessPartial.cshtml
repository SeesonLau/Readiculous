<div style="display: flex; flex-direction: column; align-items: center; text-align: center;">
    <div style="background: #b6e7c9; border-radius: 50%; width: 60px; height: 60px; display: flex; align-items: center; justify-content: center; margin: 0 auto 1.2rem auto;">
        <svg width="32" height="32" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <circle cx="12" cy="12" r="12" fill="none"/>
            <path d="M7 13l3 3 7-7" stroke="#3cb371" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
    </div>
    <div style="font-size: 2.1rem; font-weight: bold; color: #2c2133; margin-bottom: 0.5rem; text-align: center;">@ViewBag.Title</div>
    <div style="font-size: 1.1rem; color: #39243b; margin-bottom: 2rem; text-align: center;">@ViewBag.Message</div>
    <button id="success-login-btn" style="width: 100%; background: #edaec0; color: #2c2133; font-weight: bold; border: none; border-radius: 8px; padding: 0.9rem 0; font-size: 1.15rem; margin-top: 0.5rem; transition: background 0.2s; text-align: center;">Continue</button>
</div>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        document.getElementById('success-login-btn').onclick = function() {
            window.location.href = '/Dashboard/DashboardScreen';
        };
    });
</script> 