<div class="modal fade" id="forgotPasswordOtpModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content p-4" style="background-color: var(--color-modal); border-radius: 8px;">
            <button type="button" class="btn-close ms-auto" data-bs-dismiss="modal" aria-label="Close"></button>
            
            <div class="text-center">
                <img src="~/img/png-logo.png" class="auth-icon mb-2" alt="Logo" style="width:60px;" />
                <h2 class="h5 mb-3">Enter OTP</h2>
                <p class="small">We sent a code to <span id="forgotOtpEmailDisplay"></span>.</p>
            </div>
            
            <form id="forgotPasswordOtpForm" method="post" asp-action="VerifyForgotPasswordOtp" asp-controller="Account" autocomplete="off">
                <input type="hidden" id="forgotOtpEmail" name="Email" />
                
                <div class="otp-inputs mb-3" style="display: flex; justify-content: center; gap: 0.5rem;">
                    @for (int i = 0; i < 6; i++)
                    {
                        <input type="password" maxlength="1" class="form-control otp-input" name="OtpBox" 
                               inputmode="numeric" pattern="[0-9]*" autocomplete="off" 
                               style="width: 40px; height: 45px; text-align: center; font-size: 1.2rem;" />
                    }
                </div>
                
                <input type="hidden" name="Otp" id="ForgotOtpHidden" />
                
                <div id="forgotOtpError" class="text-danger small mb-2" style="display:none;"></div>
                
                <button type="submit" class="btn btn-primary w-100 mb-2">Continue</button>
                
                <div class="text-center small">
                    Didn't receive the email? <a href="#" id="resendForgotOtpLink">Click to resend</a>
                </div>
            </form>
        </div>
    </div>
</div> 