@model Readiculous.WebApp.Models.LoginViewModel
@using static Readiculous.Resources.Views.Screen
<form method="post" action="/Account/Login" id="loginForm">
    @Html.AntiForgeryToken()
    <div class="mb-3">
        <label class="form-label" for="emailInput">@Email</label>
        <input type="text" id="emailInput" class="form-control" asp-for="Email" placeholder="Enter email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label" for="passwordInput">@Password</label>
        <input type="password" id="passwordInput" class="form-control" asp-for="Password" placeholder="Enter password" />
        <span asp-validation-for="Password" class="text-danger"></span>
        <div style="display: flex; justify-content: flex-end; margin-top: 0.3rem;">
            <a href="#" class="login-link forgot-link" id="show-forgot" style="font-size: 0.95rem; font-weight: 400; color: #fff; opacity: 0.85;">@ForgotPass</a>
        </div>
    </div>
    <div style="display: flex; justify-content: center; gap: 12px; margin-top: 1.2rem;">
        <button class="btn login-btn" type="submit">@Login</button>
        <button type="button" class="btn login-btn signup-btn" id="show-signup" style="font-weight: bold; background: #fff; color: #b089a5; border: 2px solid #b089a5;">Sign Up</button>
    </div>
</form> 