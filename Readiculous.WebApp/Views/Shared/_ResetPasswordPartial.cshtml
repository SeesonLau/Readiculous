@model Readiculous.Services.ServiceModels.ForgotPasswordModel
<div>
    <div class="login-title">Reset Password</div>
    <form method="post" id="resetPasswordForm">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Email" />
        <div class="mb-3">
            <label class="form-label" for="newPassword">New Password</label>
            <input type="password" id="newPassword" class="form-control" asp-for="NewPassword" placeholder="Enter new password" required minlength="8" />
            <span asp-validation-for="NewPassword" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label class="form-label" for="confirmPassword">Confirm New Password</label>
            <input type="password" id="confirmPassword" class="form-control" asp-for="ConfirmPassword" placeholder="Confirm new password" required minlength="8" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
        <div style="display: flex; justify-content: center;">
            <button class="btn login-btn" type="submit">Continue</button>
        </div>
        <div style="display: flex; justify-content: center; margin-top: 1.2rem;">
            <a href="/" class="login-link" id="show-login">Back to Login</a>
        </div>
    </form>
</div> 