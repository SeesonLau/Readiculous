@model Readiculous.Services.ServiceModels.ReviewViewModel

@{
    ViewData["Title"] = "Edit Review";
}

<h1>@ViewData["Title"]</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="EditReview" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Hidden fields -->
            <input type="hidden" asp-for="ReviewId" />
            <input type="hidden" asp-for="BookId" />
            <input type="hidden" asp-for="UserId" />
            <input type="hidden" asp-for="CreatedTime" />

            <!-- Display Username (read-only) -->
            <div class="form-group">
                <label asp-for="UserName" class="form-label">User Name</label>
                <input asp-for="UserName" class="form-control" readonly />
            </div>

            <!-- Display Email (read-only) -->
            <div class="form-group mt-3">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" class="form-control" readonly />
            </div>

            <!-- Rating Stars -->
            <div class="form-group mt-3">
                <label class="form-label d-block">Rating</label>
                <div class="rating-stars" style="font-size: 1.5rem;">
                    @for (int i = 1; i <= 5; i++)
                    {
                        <input type="radio"
                               name="Rating"
                               id="star-@i"
                               value="@i"
                               class="d-none"
                               @(Model.Rating == i ? "checked" : "") />
                        <label for="star-@i" class="me-1" style="cursor:pointer;">
                            <i class="bi @(i <= Model.Rating ? "bi-star-fill text-warning" : "bi-star text-muted")"></i>
                        </label>
                    }
                </div>
                <span asp-validation-for="Rating" class="text-danger d-block mt-1"></span>
            </div>

            <!-- Comment -->
            <div class="form-group mt-3">
                <label asp-for="Comment" class="form-label">Comment</label>
                <textarea asp-for="Comment" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>

            <!-- Submit -->
            <div class="form-group mt-4">
                <input type="submit" value="Update Review" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

