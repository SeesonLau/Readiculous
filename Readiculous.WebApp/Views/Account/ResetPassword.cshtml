@using Readiculous.Services.ServiceModels
@model ForgotPasswordModel
@{
    ViewBag.LoginView = true;
    ViewData["Title"] = "Reset Password";
}
@section styles {
    <link rel="stylesheet" href="~/css/forgotPassword.css" />
}
<div class="reset-box-custom">
    <div class="reset-card-custom position-relative">
        <a href="@Url.Action("ForgotPasswordOtp", "Account")" class="reset-back-btn" title="Back to OTP">
            <span style="font-size:1.3rem;vertical-align:middle;">&#8592;</span> Back
        </a>
        <div class="reset-cat-img-wrap">
            <img src="~/img/cat-sleep.png" alt="Cat with Book" class="reset-cat-img" />
        </div>
        <div class="reset-title">Reset Password</div>
        <div class="reset-subtitle">Enter your new password below</div>
        <form method="post" asp-action="ResetPassword" asp-controller="Account">
            <input type="hidden" asp-for="Email" />
            <div>
                <input type="password" class="reset-input" asp-for="NewPassword" placeholder="New Password" autocomplete="off" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <div>
                <input type="password" class="reset-input" asp-for="ConfirmPassword" placeholder="Confirm New Password" autocomplete="off" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <button class="reset-btn" type="submit">Reset Password</button>
        </form>
        <div class="reset-signin">
            Remember your password? <a asp-controller="Account" asp-action="Login">Sign In</a>
        </div>
    </div>
</div>

@section scripts {
    <script>
        var errorMessage = '@TempData["ErrorMessage"]';
        if (errorMessage) {
            toastr.error(errorMessage);
        }
    </script>
} 