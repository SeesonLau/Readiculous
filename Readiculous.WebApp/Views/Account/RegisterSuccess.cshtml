@{
    ViewBag.LoginView = true;
    ViewData["Title"] = "Registration Complete";
}
<link rel="stylesheet" href="~/css/register.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
<div class="success-box-custom">
    <div class="success-card-custom">
        <div class="success-icon">
            <i class="fa-solid fa-circle-check"></i>
        </div>
        <div class="success-title">All done!</div>
        <div class="success-subtitle">Your account has been successfully created</div>
        <form method="get" asp-action="Login" asp-controller="Account">
            <button type="submit" class="success-btn">Done</button>
        </form>
    </div>
</div> 