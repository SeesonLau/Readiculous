@using Readiculous.Services.ServiceModels
@model EmailRequestModel
@{
    ViewBag.LoginView = true;
    ViewData["Title"] = "Register Page";
}
@section styles {
    <style>
        body, html {
            background: #fff !important;
        }
        .register-box-custom {
            background: #fff;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .register-card-custom {
            background: #b993b2;
            border-radius: 24px;
            box-shadow: 0 4px 24px rgba(0,0,0,0.08);
            padding: 2.5rem 2rem;
            max-width: 400px;
            margin: auto;
            text-align: center;
            position: relative;
        }
        .register-back-btn {
            position: absolute;
            top: 1.2rem;
            left: 1.2rem;
            color: #4b2e4c;
            font-weight: 600;
            text-decoration: none;
            font-size: 1rem;
            background: none;
            border: none;
            outline: none;
            cursor: pointer;
            transition: color 0.2s;
        }
        .register-back-btn:hover {
            color: #b993b2;
            text-decoration: underline;
        }
        .register-cat-img-wrap {
            display: flex;
            justify-content: center;
            align-items: center;
            margin-bottom: 1.2rem;
            margin-top: 0.5rem;
        }
        .register-cat-img {
            width: 110px;
        }
        .register-title {
            font-size: 2.3rem;
            font-weight: 700;
            color: #39243b;
            margin-bottom: 1.6rem;
            font-family: inherit;
        }
        .register-input {
            background: #f7e6f7;
            border: none;
            border-radius: 16px;
            padding: 1.1rem 1.2rem;
            font-size: 1.25rem;
            margin-bottom: 1.4rem;
            width: 100%;
            color: #39243b;
            font-family: inherit;
            font-weight: 500;
        }
        .register-input:focus {
            outline: 2px solid #b993b2;
            background: #fff;
        }
        .register-btn {
            background: #f7b6c2;
            color: #39243b;
            border: none;
            border-radius: 16px;
            padding: 1.1rem 0;
            width: 100%;
            font-size: 1.25rem;
            font-weight: 700;
            margin-bottom: 1.4rem;
            transition: background 0.2s;
            font-family: inherit;
        }
        .register-btn:hover {
            background: #e89ab0;
        }
        .register-signin {
            color: #39243b;
            font-size: 1.1rem;
        }
        .register-signin a {
            color: #222;
            font-weight: 700;
            text-decoration: none;
        }
        .register-signin a:hover {
            text-decoration: underline;
        }
    </style>
}
<div class="register-box-custom">
    <div class="register-card-custom position-relative">
        <a href="@Url.Action("Login", "Account")" class="register-back-btn" title="Back to Login">
            <span style="font-size:1.3rem;vertical-align:middle;">&#8592;</span> Back
        </a>
        <div class="register-cat-img-wrap">
            <img src="~/img/cat-sleep.png" alt="Cat with Book" class="register-cat-img" />
        </div>
        <div class="register-title">Create Your Account</div>
        <form method="post" asp-action="RequestOtp" asp-controller="Account">
            <input type="email" class="register-input" asp-for="Email" placeholder="Email Address" autocomplete="off" />
            <span asp-validation-for="Email" class="text-danger"></span>
            <button class="register-btn" type="submit">Sign Up</button>
        </form>
        <div class="register-signin">
            Already have an account? <a asp-controller="Account" asp-action="Login">Sign In</a>
        </div>
    </div>
</div>

@section scripts {
    <script>
        var errorMessage = '@TempData["ErrorMessage"]';
        var successMessage = '@TempData["SuccessMessage"]';
        if (errorMessage) {
            toastr.error(errorMessage);
        }
        if (successMessage) {
            toastr.success(successMessage);
        }
    </script>
}
