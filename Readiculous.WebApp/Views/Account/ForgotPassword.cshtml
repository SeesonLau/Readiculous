@using Readiculous.Services.ServiceModels
@model EmailRequestModel
@{
    ViewBag.LoginView = true;
    ViewData["Title"] = "Forgot Password";
}
@section styles {
    <link rel="stylesheet" href="~/css/forgotPassword.css" />
}
<div class="forgot-box-custom">
    <div class="forgot-card-custom position-relative">
        <a href="@Url.Action("Login", "Account")" class="forgot-back-btn" title="Back to Login">
            <span style="font-size:1.3rem;vertical-align:middle;">&#8592;</span> Back
        </a>
        <div class="forgot-cat-img-wrap">
            <img src="~/img/cat-sleep.png" alt="Cat with Book" class="forgot-cat-img" />
        </div>
        <div class="forgot-title">Forgot Password</div>
        <div class="forgot-subtitle">Enter your email address and we'll send you a verification code to reset your password</div>
        <form method="post" asp-action="RequestForgotPasswordOtp" asp-controller="Account">
            <input type="email" class="forgot-input" asp-for="Email" placeholder="Email Address" autocomplete="off" />
            <span asp-validation-for="Email" class="text-danger"></span>
            <button class="forgot-btn" type="submit">Send Code</button>
        </form>
        <div class="forgot-signin">
            Remember your password? <a asp-controller="Account" asp-action="Login">Sign In</a>
        </div>
    </div>
</div>

@section scripts {
    <script>
        var errorMessage = '@TempData["ErrorMessage"]';
        var successMessage = '@TempData["SuccessMessage"]';
        if (errorMessage) {
            toastr.error(errorMessage);
        }
        if (successMessage) {
            toastr.success(successMessage);
        }
    </script>
} 