@model IEnumerable<Readiculous.Services.ServiceModels.GenreListItemViewModel>

<table class="genre-table">
    <thead>
        <tr class="text-center">
            <th rowspan="2" class="text-center align-middle">@Html.DisplayNameFor(model => model.First().Name)</th>
            <th rowspan="2" class="text-center align-middle">@Html.DisplayNameFor(model => model.First().Description)</th>
            <th rowspan="2" class="text-center align-middle">@Html.DisplayNameFor(model => model.First().BookCount)</th>
            <th rowspan="2" class="text-center align-middle">Latest Update</th>
            <th rowspan="2" class="text-center align-middle">Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            @foreach (var item in Model)
            {
                <tr id="genre-row-@item.GenreId">
                    <td class="align-middle" title="@item.Name">@item.Name</td>
                    <td class="align-middle" title="@item.Description">@item.Description</td>
                    <td class="text-center align-middle">
                        <span class="badge bg-secondary">@item.BookCount</span>
                    </td>
                    <td class="text-center align-middle">@item.UpdatedTime.ToString("yyyy MM dd") | @item.UpdatedTime.ToString("h:mm tt")</td>
                    <td class="text-center align-middle">
                        <div class="action-buttons">
                            <a asp-action="GenreViewPage" asp-route-id="@item.GenreId"
                               class="genre-action-btn btn-view" title="View">
                                <i class="fas fa-eye"></i>
                            </a>
                            <button class="genre-action-btn btn-edit edit-genre-btn"
                                    data-genre-id="@item.GenreId" title="Edit">
                                <i class="fas fa-pen"></i>
                            </button>

                            <button class="genre-action-btn btn-delete btn-delete-genre"
                                    data-genre-id="@item.GenreId"
                                    data-genre-name="@item.Name" title="Delete">
                                <i class="fas fa-trash"></i>
                            </button>
                        </div>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6" class="text-center empty-state">
                    <i class="fas fa-search me-2"></i>No genres found matching your criteria.
                </td>
            </tr>
        }
    </tbody>
</table>
