@model IEnumerable<Readiculous.Services.ServiceModels.GenreListItemViewModel>

<table class="genre-table">
    <thead>
        <tr>
            <th rowspan="2" class="text-center align-middle">Genre</th>
            <th rowspan="2" class="text-center align-middle">Description</th>
            <th rowspan="2" class="text-center align-middle">Book Count</th>
            <th colspan="2" class="text-center align-middle">Modified</th>
            <th rowspan="2" class="text-center align-middle">Actions</th>
        </tr>
        <tr class="text-center">
            <th class="text-center">Date</th>
            <th class="text-center">Time</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            @foreach (var item in Model)
            {
                <tr id="genre-row-@item.GenreId">
                    <td class="genre-name-cell" title="@item.Name">@item.Name</td>
                    <td class="genre-description-cell" title="@item.Description">@item.Description</td>
                    <td class="text-center">
                        <span class="genre-book-count">@item.BookCount</span>
                    </td>
                    <td class="text-center" data-label="Updated Date">@item.UpdatedTime.ToString("yyyy MMMM dd")</td>
                    <td class="text-center" data-label="Updated Time">@item.UpdatedTime.ToString("h:mm tt")</td>
                    <td class="genre-actions">
                        <a asp-action="GenreViewPage" asp-route-id="@item.GenreId" 
                           class="genre-action-btn genre-view-btn" title="View">
                            <i class="fas fa-eye"></i>
                        </a>
                        <button class="genre-action-btn genre-edit-btn edit-genre-btn"
                                data-genre-id="@item.GenreId" title="Edit">
                            <i class="fas fa-edit"></i>
                        </button>
                        <button class="genre-action-btn genre-delete-btn btn-delete-genre"
                                data-genre-id="@item.GenreId"
                                data-genre-name="@item.Name" title="Delete">
                            <i class="fas fa-trash"></i>
                        </button>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6" class="genre-empty-state">
                    <i class="fas fa-search"></i>
                    <p>No genres found matching your criteria.</p>
                </td>
            </tr>
        }
    </tbody>
</table>
