@model Readiculous.Services.ServiceModels.GenreViewModel

<div class="genre-modal-card">
    <form id="editGenreForm" asp-action="Edit" autocomplete="off">
        <div id="editGenreValidationSummary" asp-validation-summary="ModelOnly" class="text-danger mb-3 small"></div>

        <input type="hidden" asp-for="GenreId" />
        <input type="hidden" asp-for="CreatedBy" />
        <input type="hidden" asp-for="CreatedTime" />
        <input type="hidden" asp-for="UpdatedBy" />
        <input type="hidden" asp-for="UpdatedTime" />

        <div class="mb-3">
            <label asp-for="Name" class="genre-modal-label"></label>
            <input asp-for="Name" class="genre-modal-input form-control" placeholder="Enter genre name" />
            <span id="editGenreNameError" asp-validation-for="Name" class="text-danger small"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="genre-modal-label"></label>
            <textarea asp-for="Description" class="genre-modal-textarea form-control" placeholder="Enter genre description"></textarea>
            <span id="editGenreDescriptionError" asp-validation-for="Description" class="text-danger small"></span>
        </div>

        <div class="genre-modal-actions">
            <button type="button" class="genre-btn-cancel btn" data-bs-dismiss="modal">Cancel</button>
            <button type="submit" class="genre-btn-save btn">Save</button>
        </div>
    </form>
</div>
