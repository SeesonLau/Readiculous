@model Readiculous.Services.ServiceModels.AdminDashboardViewModel;

@{
    ViewData["Title"] = "Dashboard";
}

<link rel="stylesheet" href="~/css/adminDashboard/admin-screen.css" />
<div class="container-fluid px-4 py-4">
    <!-- Summary Cards -->
    <div class="row">
        <div class="col-12 col-sm-4 mb-4">
            <div class="summary-card">
                <h5>Total Users</h5>
                <h2>@Model.UserCount</h2>
            </div>
        </div>
        <div class="col-12 col-sm-4 mb-4">
            <div class="summary-card">
                <h5>Total Books</h5>
                <h2>@Model.BookCount</h2>
            </div>
        </div>
        <div class="col-12 col-sm-4 mb-4">
            <div class="summary-card">
                <h5>Total Genres</h5>
                <h2>@Model.GenreCount</h2>
            </div>
        </div>
    </div>

    <!-- Content Section -->
    <div class="row">
        <!-- Most Used Genre -->
        <div class="col-12 col-lg-8 mb-4 mb-lg-0">
            <div class="chart-container h-100">
                <h5 class="section-title">Most Used Genre</h5>
                <div class="bar-chart">
                    <!-- Dummy data for genres -->
                    <div class="bar-item">
                        <div class="bar-label">
                            <span>Fantasy</span>
                            <span>142</span>
                        </div>
                        <div class="bar-bg">
                            <div class="bar-fill" style="width: 95%"></div>
                        </div>
                    </div>
                    <div class="bar-item">
                        <div class="bar-label">
                            <span>Science Fiction</span>
                            <span>118</span>
                        </div>
                        <div class="bar-bg">
                            <div class="bar-fill" style="width: 80%"></div>
                        </div>
                    </div>
                    <div class="bar-item">
                        <div class="bar-label">
                            <span>Mystery</span>
                            <span>92</span>
                        </div>
                        <div class="bar-bg">
                            <div class="bar-fill" style="width: 65%"></div>
                        </div>
                    </div>
                    <div class="bar-item">
                        <div class="bar-label">
                            <span>Romance</span>
                            <span>75</span>
                        </div>
                        <div class="bar-bg">
                            <div class="bar-fill" style="width: 50%"></div>
                        </div>
                    </div>
                    <div class="bar-item">
                        <div class="bar-label">
                            <span>Historical Fiction</span>
                            <span>58</span>
                        </div>
                        <div class="bar-bg">
                            <div class="bar-fill" style="width: 40%"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Top 5 Reviewers -->
        <div class="col-12 col-lg-4">
            <div class="reviewer-container h-100">
                <h5 class="section-title text-center">Top 5 Reviewers</h5>
                <!-- Reviewer cards -->
                <div class="reviewer-card d-flex align-items-center">
                    <div class="rank-number">1</div>
                    <div class="user-avatar">BL</div>
                    <div class="flex-grow-1">
                        <div>BookLover42</div>
                        <div class="d-flex align-items-center gap-2 small">
                            <span><i class="bi bi-star-fill text-warning"></i> 4.8</span>
                            <span>|</span>
                            <span>42 Reviews</span>
                        </div>
                    </div>
                </div>
                <div class="reviewer-card d-flex align-items-center">
                    <div class="rank-number">2</div>
                    <div class="user-avatar">LC</div>
                    <div class="flex-grow-1">
                        <div>LiteraryCritic</div>
                        <div class="d-flex align-items-center gap-2 small">
                            <span><i class="bi bi-star-fill text-warning"></i> 4.7</span>
                            <span>|</span>
                            <span>38 Reviews</span>
                        </div>
                    </div>
                </div>
                <div class="reviewer-card d-flex align-items-center">
                    <div class="rank-number">3</div>
                    <div class="user-avatar">PT</div>
                    <div class="flex-grow-1">
                        <div>PageTurner</div>
                        <div class="d-flex align-items-center gap-2 small">
                            <span><i class="bi bi-star-fill text-warning"></i> 4.6</span>
                            <span>|</span>
                            <span>35 Reviews</span>
                        </div>
                    </div>
                </div>
                <div class="reviewer-card d-flex align-items-center">
                    <div class="rank-number">4</div>
                    <div class="user-avatar">NE</div>
                    <div class="flex-grow-1">
                        <div>NovelEnthusiast</div>
                        <div class="d-flex align-items-center gap-2 small">
                            <span><i class="bi bi-star-fill text-warning"></i> 4.5</span>
                            <span>|</span>
                            <span>30 Reviews</span>
                        </div>
                    </div>
                </div>
                <div class="reviewer-card d-flex align-items-center">
                    <div class="rank-number">5</div>
                    <div class="user-avatar">SS</div>
                    <div class="flex-grow-1">
                        <div>StorySeeker</div>
                        <div class="d-flex align-items-center gap-2 small">
                            <span><i class="bi bi-star-fill text-warning"></i> 4.4</span>
                            <span>|</span>
                            <span>28 Reviews</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
