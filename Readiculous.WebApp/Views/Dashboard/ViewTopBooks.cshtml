

@{
    ViewData["Title"] = "Top Books";
    Layout = "_Layout";
    ViewBag.ShowReviewerNav = true;
}

<main class="container py-4">
    <h2 class="mb-4">Top Books</h2>
    <!-- Top Row (5 Books) -->
    <div class="book-grid row row-cols-5 g-4">
        @for (int i = 1; i <= 5; i++)
        {
            <div class="col">
                <div class="card h-100 book-card-clickable">
                    <img src="~/img/placeholder.png" class="card-img-top" alt="Book Title @i" />
                    <div class="card-body">
                        <h5 class="card-title">Example Book Title @i</h5>
                        <p class="card-text">Author Name @i</p>
                        <p class="card-text">⭐ @(4.0 + (i % 2) * 0.5)</p>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Bottom Row (5 Books) -->
    <div class="book-grid row row-cols-5 g-4 mt-2">
        @for (int i = 6; i <= 10; i++)
        {
            <div class="col">
                <div class="card h-100 book-card-clickable">
                    <img src="~/img/placeholder.png" class="card-img-top" alt="Book Title @i" />
                    <div class="card-body">
                        <h5 class="card-title">Example Book Title @i</h5>
                        <p class="card-text">Author Name @i</p>
                        <p class="card-text">⭐ @(3.5 + (i % 3) * 0.3)</p>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Pagination -->
    <div class="mt-4 d-flex justify-content-center">
        <nav aria-label="Page navigation">
            <ul class="pagination">
                <li class="page-item disabled"><a class="page-link" href="#">«</a></li>
                <li class="page-item active"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item"><a class="page-link" href="#">»</a></li>
            </ul>
        </nav>
    </div>
    </section>

