@{
    Layout = "_Layout";
    ViewData["Title"] = "Book Details";
    ViewBag.ShowReviewerNav = true; // This will make the Dashboard header show New Books, Top Books, Genre, Profile
}

<section class="container py-4">
    <div class="book-details-container row">
        <!-- Book Cover and Favorite Button -->
        <div class="col-md-4 text-center">
            <img src="@Url.Content(Model.CoverImageUrl ?? "~/img/placeholder.png")"
                 alt="@Model.Title Cover"
                 class="img-fluid rounded shadow-sm mb-3" />
            <button class="btn btn-outline-primary w-100">Add to Favorites</button>
        </div>

        <!-- Book Information -->
        <div class="col-md-8">
            <h2 class="mb-3">@Model.Title</h2>
            <table class="table table-bordered mb-4">
                <tr><th>Author</th><td>@Model.Author</td></tr>
                <tr><th>Genre</th><td>@Model.Genre</td></tr>
                <tr><th>Series</th><td>@Model.Series ?? "N/A"</td></tr>
                <tr>
                    <th>Rating</th>
                    <td>
                        @Model.Rating
                        <span style="color: gold;">&#9733;</span>
                    </td>
                </tr>
                <tr><th>Added Date</th><td>@Model.AddedDate.ToString("MMMM dd, yyyy")</td></tr>
            </table>

            <h4>Description</h4>
            <p>@Model.Description</p>
        </div>
    </div>

    <!-- Reviews Section -->
    <div class="mt-5">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h4>Reviews (@Model.Reviews.Count)</h4>
            <button class="btn btn-sm btn-outline-primary" onclick="showModal('required')">+ Add Review</button>
        </div>

        @if (Model.Reviews.Any())
        {
            <div class="row g-3">
                @foreach (var review in Model.Reviews)
                {
                    <div class="col-md-6">
                        <div class="card h-100 shadow-sm">
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <strong>@review.Reviewer</strong>
                                    <small class="text-muted">@review.Date.ToString("MMM dd, yyyy")</small>
                                </div>
                                <div class="review-stars mb-2">
                                    @for (int i = 0; i < review.Stars; i++)
                                    {
                                        <span style="color: gold;">&#9733;</span>
                                    }
                                    @for (int i = review.Stars; i < 5; i++)
                                    {
                                        <span style="color: lightgray;">&#9733;</span>
                                    }
                                </div>
                                <p class="mb-0">@review.Comment</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <p class="text-muted">No reviews yet.</p>
        }
    </div>
</section>
