    <script>
        function showLoginModal() {
            fetch('/LandingPage/Login')
                .then(response => response.text())
                .then(html => {
                    document.getElementById('loginModalBody').innerHTML = html;
                    const modal = new bootstrap.Modal(document.getElementById('loginModal'));
                    modal.show();
                });
        }
    </script>
