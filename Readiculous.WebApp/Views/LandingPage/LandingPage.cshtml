@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <title>Readiculous - Landing Page</title>

    <!-- Custom CSS -->
    <link rel="stylesheet" href="@Url.Content("~/css/landing.css")" />

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- jQuery & Validation -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
</head>
<body>

    <!-- Header with Logo only -->
    <header class="navbar">
        <div class="logo-group">
            <img src="@Url.Content("~/img/png-logo.png")" alt="Logo" class="logo-icon" />
            <h1 class="team-name">Readiculous</h1>
        </div>
    </header>

    <!-- Hero Section -->
    <section class="hero">
        <div class="hero-text">
            <h2>Where Book Reviews are Seriously Readiculous!</h2>
            <p>
                Discover new books worth reading, share your honest thoughts, and explore what others are saying.
                Whether you're a casual reader or a dedicated bookworm,
                join a community that takes book reviewing to the next level with a touch of fun, flair, and readiculous passion.
            </p>
            <div class="button-wrapper">
                <a href="@Url.Action("GuestView", "UserView")" class="cta-btn">Get Started</a>
            </div>
        </div>
        <div class="hero-image">
            <img src="@Url.Content("~/img/download.png")" alt="Reading Illustration" />
        </div>
    </section>

    <!-- Bootstrap JS Bundle (with Popper) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
