@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <title>Readiculous - Landing Page</title>
    <link rel="stylesheet" href="@Url.Content("~/css/landing.css")" />

    <!-- Add validation script references -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
</head>
<body>
    <!-- Navigation Bar -->
    <header class="navbar">
        <div class="logo-group" onclick="location.href='@Url.Action("GuestView", "UserView")'">
            <img src="@Url.Content("~/img/png-logo.png")" alt="Logo" class="logo-icon" />
            <h1 class="team-name">Readiculous</h1>
        </div>
        <nav class="nav-links">
            <a href="@Url.Action("GuestView", "UserView")#new-books"><span>📖</span> New Books</a>
            <a href="@Url.Action("GuestView", "UserView")#top-books"><span>🏆</span> Top Books</a>
            <a href="@Url.Action("GenreBooks", "UserView")"><span>🏷️</span> Genre</a>
            <a href="#" onclick="loadModalContent()">Login</a>
        </nav>
    </header>

    <!-- Hero Section -->
    <section class="hero">
        <div class="hero-text">
            <h2>Where Book Reviews are Seriously Readiculous!</h2>
            <p>
                Discover new books worth reading, share your honest thoughts, and explore what others are saying.
                Whether you're a casual reader or a dedicated bookworm,
                join a community that takes book reviewing to the next level with a touch of fun, flair, and readiculous passion.
            </p>
            <div class="button-wrapper">
                <a href="@Url.Action("GuestView", "UserView")" class="cta-btn">Get Started</a>
            </div>
        </div>
        <div class="hero-image">
            <img src="@Url.Content("~/img/download.png")" alt="Reading Illustration" />
        </div>
    </section>


