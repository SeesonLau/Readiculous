@model Readiculous.WebApp.Models.LoginViewModel
@using static Readiculous.Resources.Views.Screen
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <title>Readiculous - Landing Page</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/global.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <style>
        :root {
            --color-text: #2C2133;
            --color-header: #B089A5;
            --color-btn: #EDAEC0;
            --color-modal: #F8ECE9;
            --color-background: #E1DACD;
            --font-primary: 'Gentium Book Plus', serif;
        }
        html, body {
            height: 100%;
            margin: 0;
            font-family: var(--font-primary);
            background: var(--color-background) !important;
            overflow: hidden;
        }
        .center-viewport {
            min-height: 0;
            display: block;
        }
        .split-container {
            display: flex;
            flex-direction: row;
            max-width: 1300px;
            min-width: 0;
            margin: 8px auto 80px auto;
            box-shadow: 0 4px 24px rgba(44,33,51,0.10);
            border-radius: 14px;
            overflow: hidden;
            background: #fff;
            padding: 0;
            position: relative;
        }
        .left-half {
            flex: 1;
            background: var(--color-header);
            color: #fff;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            padding: 32px 64px 32px 64px;
        }
        .right-half {
            flex: 1;
            background: var(--color-modal);
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            padding: 32px 64px 32px 64px;
            min-width: 340px;
        }
        .left-half img {
            max-width: 320px;
            height: 260px;
            width: auto;
            display: block;
            margin-bottom: 18px;
        }
        .hero-title {
            font-size: 1.7rem;
            font-weight: 700;
            margin-bottom: 10px;
            color: #fff;
            text-align: center;
        }
        .hero-desc {
            font-size: 1.12rem;
            color: #f8ece9;
            margin-bottom: 0;
            text-align: center;
            max-width: 520px;
        }
        .brand-logo {
            width: 60px;
            height: 60px;
            margin-bottom: 18px;
        }
        .login-card {
            background: var(--color-header);
            color: #fff;
            border-radius: 18px;
            box-shadow: 0 2px 12px rgba(0,0,0,0.06);
            padding: 2.5rem 2.2rem;
            max-width: 480px;
            width: 100%;
        }
        .login-title {
            font-size: 1.2rem;
            font-weight: 700;
            color: #fff;
            margin-bottom: 1rem;
            text-align: center;
        }
        .login-btn {
            background: var(--color-btn);
            color: var(--color-text);
            border: none;
            border-radius: 16px;
            padding: 1rem 0;
            width: 100%;
            font-size: 1.1rem;
            font-weight: 700;
            margin-bottom: 1.2rem;
            transition: background 0.2s;
        }
        .login-btn:hover {
            background: #e89ab0;
        }
        .login-link {
            color: #fff;
            font-weight: 600;
            text-decoration: none;
            margin: 0 8px;
            font-size: 1rem;
        }
        .login-link:hover {
            text-decoration: underline;
            color: var(--color-btn);
        }
        .forgot-signup-row {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1.2rem;
        }
        .form-label {
            color: #fff;
            font-weight: 600;
        }
        .form-control:focus {
            border-color: var(--color-header);
            box-shadow: 0 0 0 0.2rem #b089a540;
        }
        .welcome-message {
            width: 100vw;
            text-align: center;
            margin-top: 2.2rem;
            margin-bottom: 1.2rem;
        }
        .welcome-title {
            font-size: 2.3rem;
            font-weight: bold;
            color: #b089a5;
            letter-spacing: 1px;
        }
        .welcome-subtitle {
            font-size: 1.3rem;
            color: #2c2133;
            margin-top: 0.1rem;
        }
    </style>
</head>
<body style="background: #f2eff1;">
    <div class="center-viewport">
        <!-- Centered Welcome Message -->
        <div class="welcome-message">
            <div class="welcome-title">Welcome Back, Reader!</div>
            <div class="welcome-subtitle">Log in to join the readiculous fun.</div>
        </div>
        <div class="split-container">
            <!-- Left Side: Image and Text -->
            <div class="left-half">
                <img src="@Url.Content("~/img/download.png")" alt="Reading Illustration" />
                <div class="hero-title">Where Book Reviews are Seriously Readiculous!</div>
                <div class="hero-desc">
                    Discover new books worth reading, share your honest thoughts, and explore what others are saying.<br>
                    Whether you're a casual reader or a dedicated bookworm, join a community that takes book reviewing to the next level with a touch of fun, flair, and readiculous passion.
                </div>
            </div>
            <!-- Right Side: Login Form -->
            <div class="right-half">
                <div style="display: flex; flex-direction: row; align-items: center; justify-content: center; margin-bottom: 18px; gap: 10px;">
                    <img src="@Url.Content("~/img/readiculous-logo.svg")" style="width: 44px; height: 44px;" alt="Logo" />
                    <span style="font-weight: bold; font-size: 1.3rem; color: #b089a5; letter-spacing: 1px; text-shadow: 0 1px 4px #fff;">Readiculous</span>
                </div>
                <div class="login-card">
                    <div id="auth-container"></div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script src="~/js/auth.js"></script>
    <script>
        toastr.options = {
            "closeButton": true,
            "progressBar": true,
            "positionClass": "toast-top-right",
            "timeOut": "5000"
        };
        var errorMessage = '@TempData["ErrorMessage"]';
        var successMessage = '@TempData["SuccessMessage"]';
        if (errorMessage) {
            toastr.error(errorMessage);
        }
        if (successMessage) {
            toastr.success(successMessage);
        }
    </script>
</body>
</html>
