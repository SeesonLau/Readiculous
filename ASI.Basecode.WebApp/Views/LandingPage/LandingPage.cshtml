@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <title>Readiculous - Landing Page</title>
    <link rel="stylesheet" href="@Url.Content("~/css/style.css")" />
    <style>
        html {
            scroll-behavior: smooth;
        }
    </style>
</head>
<body>
    <!-- Navigation Bar -->
    <header class="navbar">
        <div class="logo-group" onclick="location.reload()">
            <img src="@Url.Content("~/img/png-logo.png")" alt="Logo" class="logo-icon" />
            <h1 class="team-name">Readiculous</h1>
        </div>
        <nav class="nav-links">
            <a href="@Url.Action("UserView", "UserTest")#new-books"><span>📖</span> New Books</a>
            <a href="@Url.Action("UserView", "UserTest")#top-books"><span>🏆</span> Top Books</a>
            <a href="@Url.Action("GenreBooks", "BookTest")"><span>🏷️</span> Genre</a>
            <a href="#" onclick="toggleAuthModal()"><span>👤</span></a>
        </nav>
    </header>
    <!-- Hero Section -->
    <section class="hero">
        <div class="hero-text">
            <h2>Where Book Reviews are Seriously Readiculous!</h2>
            <p>
                Discover new books worth reading, share your honest thoughts, and explore what others are saying. 
                Whether you're a casual reader or a dedicated bookworm, 
                join a community that takes book reviewing to the next level with a touch of fun, flair, and readiculous passion.
            </p>
            <div class="button-wrapper">
                <a href="@Url.Action("UserView", "UserTest")" class="cta-btn">Get Started</a>
            </div>
        </div>
        <div class="hero-image">
            <img src="@Url.Content("~/img/download.png")" alt="Reading Illustration" />
        </div>
    </section>
    @Html.Partial("_AuthModal")
    <script src="@Url.Content("~/js/landing.js")"></script>
</body>
</html>
